{
  "manifest_version": 3,
  "name": "Ripify",
  "version": "1.0",
  "description": "Download Spotify musics (100% Free & Open Source)",
  "permissions": [
    "downloads"
  ],
  "host_permissions": [
    "https://us.qqdl.site/api/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://open.spotify.com/*"],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
"web_accessible_resources": [
  {
    "resources": ["icons/*.png"],
    "matches": ["<all_urls>"]
  }
]
}